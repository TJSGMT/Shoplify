<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price) %>
  </p>
  <p>
    <%= button_to "Buy Now!", checkout_create_path,params: {id: product.id},remote: true, method: :post %>
  </p>
  <p>
    <strong>Sales Count:</strong>
    <%= product.sales_count %>
  </p>
</div>
